# Bloom Environment Configuration Template
# Copy this file to .env and fill in the values
# For specific environments, copy from .env.development, .env.staging, or .env.production

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=dev

# URLs (single set - set appropriate values for your environment)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# =============================================================================
# REACT APP CONFIGURATION (frontend)
# =============================================================================
REACT_APP_ENVIRONMENT=dev
REACT_APP_BACKEND_URL=http://localhost:3001
REACT_APP_GRAPH_VERSION=version/latest
REACT_APP_GRAPH_USER_ID=
REACT_APP_IPFS_PLAN_TIER=free

# =============================================================================
